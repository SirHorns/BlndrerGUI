<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:BlndrerGUI.ViewModels"
             x:Class="BlndrerGUI.Views.AnimationsControl"
             x:DataType="vm:BlndControlViewModel">

    <StackPanel Orientation="Horizontal" Width="900">
        <ListBox ItemsSource="{Binding AnimNames}"
                 Width="770"
                 Height="600">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBox DockPanel.Dock="Left" Text="{Binding Path}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
                                
        <StackPanel Margin="10,0,0,0">
            <Button Margin="0,2,0,2">
                <Image MaxWidth="20" MaxHeight="20" Source="avares://BlndrerGUI/Assets/add_box_FILL0_wght400_GRAD0_opsz24.png"/>
            </Button>
            <Button Margin="0,2,0,2" >
                <Image MaxWidth="20" MaxHeight="20" Source="avares://BlndrerGUI/Assets/disabled_by_default_FILL0_wght400_GRAD0_opsz24.png"/>
            </Button>
        </StackPanel>
    </StackPanel>
</UserControl>
