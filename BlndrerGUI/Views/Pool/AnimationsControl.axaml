<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:BlndrerGUI.ViewModels"
             x:Class="BlndrerGUI.Views.AnimationsControl"
             x:DataType="vm:BlndControlViewModel">

    <Design.DataContext>
        <vm:BlndControlViewModel />
    </Design.DataContext>
    
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <ListBox ItemsSource="{Binding AnimNames}"
                     Width="490"
                     MinHeight="100"
                     MaxHeight="300">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBox DockPanel.Dock="Left" Text="{Binding}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
                                
            <StackPanel Margin="10,0,0,0">
                <Button HorizontalAlignment="Center" Content="ADD"/>
                <Button HorizontalAlignment="Center" Content="REMOVE"/>
            </StackPanel>
        </StackPanel>
                            
    </StackPanel>
</UserControl>
