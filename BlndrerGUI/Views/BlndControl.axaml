<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:BlndrerGUI.ViewModels"
             xmlns:views="clr-namespace:BlndrerGUI.Views"
             xmlns:pool="clr-namespace:BlndrerGUI.Views.Pool"
             x:Class="BlndrerGUI.Views.BlndControl"
             x:DataType="vm:BlndControlViewModel">
    
    
    <StackPanel Orientation="Horizontal">
        <StackPanel Background="Bisque" Width="400">
            <TextBlock Margin="10" FontSize="25" FontWeight="SemiBold" FontFamily="{StaticResource EnriquetaFont}" Text="[Header]"/>
            <views:HeaderDataControl/>
            <TextBlock Margin="10" FontSize="25" FontWeight="SemiBold" FontFamily="{StaticResource EnriquetaFont}" Text="[Pool]"/>
            <views:PoolDataControl/>
        </StackPanel>
        <StackPanel Background="Khaki" Width="990">
            <TextBlock Margin="10" FontSize="25" FontWeight="SemiBold" FontFamily="{StaticResource EnriquetaFont}" Text="[Pool Arrays]"/>
            <pool:PoolDataAryControl/>
        </StackPanel>
    </StackPanel>
    
</UserControl>