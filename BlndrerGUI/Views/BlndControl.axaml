<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:BlndrerGUI.ViewModels"
             xmlns:views="clr-namespace:BlndrerGUI.Views"
             x:Class="BlndrerGUI.Views.BlndControl"
             x:DataType="vm:BlndControlViewModel">

    <Design.DataContext>
        <vm:BlndControlViewModel />
    </Design.DataContext>

    <ScrollViewer HorizontalAlignment="Center" Width="700" Height="700">
        <TabControl>
            <TabItem Padding="20" FontWeight="SemiBold" FontFamily="{StaticResource EnriquetaFont}" Header="[HEADER]">
                <views:HeaderDataControl/>
            </TabItem>
            <TabItem Padding="20" FontWeight="SemiBold" FontFamily="{StaticResource EnriquetaFont}" Header="[POOL]">
                <views:PoolDataControl/>
            </TabItem>
        </TabControl>
    </ScrollViewer>
</UserControl>