<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:BlndrerGUI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:BlndrerGUI.Views"
        x:Class="BlndrerGUI.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/icon.ico"
        Title="BlndrerGUI"
        CanResize="False">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    <StackPanel>
        <StackPanel Margin="5">
            <TextBlock Text="{Binding FileName}"/> 
            <StackPanel Orientation="Horizontal">
                <Button Content="Open" Margin="0,0,2,0" Command="{Binding OpenBlndFileCommand}"/>
                <Button Content="Save" Margin="2,0,0,0" Command="{Binding SaveBlndFileCommand}"/>
            </StackPanel>
        </StackPanel>
        
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            
            
            <views:BlndControl DataContext="{Binding BlndControl}"/>
        </StackPanel>
    </StackPanel>
    
    

</Window>
