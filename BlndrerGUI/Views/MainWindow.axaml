<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:BlndrerGUI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:BlndrerGUI.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="BlndrerGUI.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/icon.ico"
        Title="BlndrerGUI"
        CanResize="False">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel>
           <Button Content="Open" Margin="5" Command="{Binding OpenBlndFileCommand}"/>
           <Button Content="Save" Margin="5" Command="{Binding SaveBlndFileCommand}"/>
           <TextBlock Text="{Binding FileName}"/>
        </StackPanel>
        <views:BlndControl DataContext="{Binding BlndControl}"/>
    </StackPanel>

</Window>
